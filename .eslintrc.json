{
    "env": {
        "node": true
    },
    "extends": "eslint:recommended",
    "root": true,
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
//        "quotes": [
//            "error",
//            "single"
//        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
